{
  "name": "project",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Joris Coppejans",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "config": "^3.3.9",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "winston": "^3.11.0"
  },
  "scripts": {
    "start": "env-cmd nodemon"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  }
}
